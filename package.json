{
  "private": true,
  "name": "www-livelist",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "run-s build:*",
    "build:tsc": "tsc -b",
    "build:vite": "vite build --mode ${ENV:-production}",
    "build-dev": "ENV=development nr build",
    "build-prod": "ENV=production nr build",
    "rsync": "node scripts/rsync.ts --exclude='external-data/**'",
    "rsync-dev": "nr rsync --mode development",
    "rsync-prod": "nr rsync --mode production",
    "deploy-dev": "run-s build-dev rsync-dev",
    "deploy-prod": "run-s build-prod rsync-prod",
    "dev": "vite",
    "lint": "run-s -c lint:*",
    "lint:eslint": "eslint .",
    "lint:tsc": "tsc --noEmit",
    "lint:prettier": "prettier --check .",
    "lint-fix": "run-s -c lint-fix:*",
    "lint-fix:eslint": "eslint . --fix",
    "lint-fix:prettier": "prettier --write .",
    "test": "vitest run",
    "test-watch": "vitest",
    "preview": "vite preview"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.0",
    "lucide-react": "^0.525.0",
    "minimist": "^1.2.8",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-ga4": "^2.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.3",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@antfu/ni": "^25.0.0",
    "@eslint/js": "^9.30.1",
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/minimist": "^1.2.5",
    "@types/node": "^24.0.12",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-sort-package-json": "^1.1.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.3",
    "vitest": "^3.2.4"
  }
}
