{
  "private": true,
  "name": "www-livelist",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "run-s build:*",
    "build:tsc": "tsc -b",
    "build:vite": "vite build --mode ${ENV:-production}",
    "build-dev": "ENV=development nr build",
    "build-prod": "ENV=production nr build",
    "rsync": "node scripts/rsync.ts --exclude='external-data/**'",
    "rsync-dev": "nr rsync --mode development",
    "rsync-prod": "nr rsync --mode production",
    "deploy-dev": "run-s build-dev rsync-dev",
    "deploy-prod": "run-s build-prod rsync-prod",
    "dev": "vite",
    "lint": "run-s -c lint:*",
    "lint:eslint": "eslint .",
    "lint:tsc": "tsc --noEmit",
    "lint:prettier": "prettier --check .",
    "lint-fix": "run-s -c lint-fix:*",
    "lint-fix:eslint": "eslint . --fix",
    "lint-fix:prettier": "prettier --write .",
    "test": "vitest run",
    "test-watch": "vitest",
    "preview": "vite preview"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.562.0",
    "minimist": "^1.2.8",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-ga4": "^2.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.11.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@antfu/ni": "^28.0.0",
    "@eslint/js": "^9.39.2",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/jest": "^30.0.0",
    "@types/minimist": "^1.2.5",
    "@types/node": "^24.10.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.0.0",
    "jsdom": "^27.4.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-sort-package-json": "^1.1.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  }
}
