{
  "private": true,
  "name": "www-livelist",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite --base=${npm_package_config_prod_base_url}",
    "build:prod": "tsc -b && vite build --base=${npm_package_config_prod_base_url}",
    "deploy:prod": "rsync -avz --delete --exclude=\"data*.json\" ./dist/ ${npm_package_config_prod_deploy_url}",
    "full-deploy:prod": "yarn lint && yarn format && yarn build:prod && yarn deploy:prod",
    "build:test": "tsc -b && vite build --base=${npm_package_config_test_base_url}",
    "deploy:test": "rsync -avz --delete --exclude=\"data*.json\" ./dist/ ${npm_package_config_test_deploy_url}",
    "full-deploy:test": "yarn lint && yarn format && yarn build:test && yarn deploy:test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "preview": "vite preview"
  },
  "config": {
    "prod": {
      "base_url": "/livelist/",
      "deploy_url": "momo-lab.net:www/livelist/"
    },
    "test": {
      "base_url": "/livelist-test/",
      "deploy_url": "momo-lab.net:www/livelist-test/"
    }
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.3",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.0.12",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-sort-package-json": "^1.1.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.3",
    "vitest": "^3.2.4"
  }
}
