{
  "private": true,
  "name": "www-livelist",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite --base=${npm_package_config_prod_base_url}",
    "_build": "test -n \"${BASE_URL}\" && tsc -b && vite build --base=\"${BASE_URL}\"",
    "_deploy": "test -n \"${DEPLOY_URL}\" && rsync -avz --delete --exclude=\"data*.json\" --exclude=\"idols*.json\" ./dist/ \"${DEPLOY_URL}\"",
    "_full-deploy": "test -n \"${ENV}\" && yarn full-check && yarn build:${ENV} && yarn deploy:${ENV}",
    "typecheck": "tsc -b --noEmit",
    "test": "vitest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "full-check": "yarn typecheck && yarn test run && yarn lint && yarn format",
    "build:prod": "BASE_URL=${npm_package_config_prod_base_url} yarn _build",
    "deploy:prod": "DEPLOY_URL=${npm_package_config_prod_deploy_url} yarn _deploy",
    "full-deploy:prod": "ENV=prod yarn _full-deploy",
    "build:test": "BASE_URL=${npm_package_config_test_base_url} yarn _build",
    "deploy:test": "DEPLOY_URL=${npm_package_config_test_deploy_url} yarn _deploy",
    "full-deploy:test": "ENV=test yarn _full-deploy",
    "preview": "vite preview"
  },
  "config": {
    "prod": {
      "base_url": "/livelist/",
      "deploy_url": "momo-lab.net:www/livelist/"
    },
    "test": {
      "base_url": "/livelist-test/",
      "deploy_url": "momo-lab.net:www/livelist-test/"
    }
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.3",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.12",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-sort-package-json": "^1.1.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.3",
    "vitest": "^3.2.4"
  }
}
